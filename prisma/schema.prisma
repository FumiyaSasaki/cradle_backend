generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Building {
  id                Int      @id @default(autoincrement())
  uid               String   @unique
  name              String
  prefecture        String
  city              String
  town              String
  address           String
  building          String
  floorPlan         String
  age               DateTime
  direction         String
  vacancyFloors     String
  remarks           String
  nearbyInformation String
  distanceMinutes   Int
  deposit           Int
  keyMoney          Int
  allFloors         Int
  allRooms          Int
  rent              Float
  occupancyArea     Float
  latitude          Float
  longitude         Float
  isVacancy         Boolean
  isExistParking    Boolean
  createdAt         DateTime @updatedAt
  updatedAt         DateTime @updatedAt

  @@map("Building")
}

model Image {
  id        Int    @id @default(autoincrement())
  handleUid String
  type      String
  url       String
  title     String
  content   String

  @@map("Image")
}

model Blog {
  id        Int      @id @default(autoincrement())
  uid       String   @unique
  title     String
  content   String
  createdAt DateTime @updatedAt
  updatedAt DateTime @updatedAt

  @@map("Blog")
}

model Parking {
  id                Int      @id @default(autoincrement())
  uid               String   @unique
  name              String
  prefecture        String
  city              String
  town              String
  address           String
  age               DateTime
  remarks           String
  nearbyInformation String
  vacancyPlaces     String @default("")
  distanceMinutes   Int
  deposit           Int
  keyMoney          Int
  allPlaces         Int
  rent              Float
  latitude          Float
  longitude         Float
  createdAt         DateTime @updatedAt
  updatedAt         DateTime @updatedAt

  @@map("Parking")
}
